' Auteur MATHIEU KOLB. ST Magazine nø32.
' Sujet: horloge digitale avec aiguilles et chiffres
' GfA Basic 2 & 3, toutes r‚solutions.
'
INPUT "ENTREZ HEURES,MINUTES ET SECONDES COMME SUIT:'HH:MM:SS'",t$
CLS
SETTIME t$,""
GET 110,55,210,145,b$
BOX 109,54,211,171
DO
  a%=VAL(MID$(TIME$,7,2))
  PRINT AT(17,20);TIME$
  PRINT AT(17,21);"ST-WATCH"
  LINE 160,100,COS(PI*(VAL(MID$(TIME$,1,2))-3)/6)*20+160,SIN(PI*(VAL(MID$(TIME$,1,2))-3)/6)*20+100
  LINE 160,100,COS(PI*(VAL(MID$(TIME$,4,2))-15)/30)*30+160,SIN(PI*(VAL(MID$(TIME$,4,2))-15)/30)*30+100
  LINE 160,100,COS(PI*(VAL(MID$(TIME$,7,2))-15)/30)*40+160,SIN(PI*(VAL(MID$(TIME$,7,2))-15)/30)*40+100
  CIRCLE 160,100,50
  IF a%<>VAL(MID$(TIME$,7,2))
    PUT 110,55,b$
  ENDIF
LOOP
