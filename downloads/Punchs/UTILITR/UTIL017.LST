' ST MAGAZINE 35
' HAUTE RESOLUTION
' GFA 2.0
' PIERRE COUPARD
'
ecran_logique$=SPACE$(32000)
VOID XBIOS(5,L:VARPTR(ecran_logique$),L:-1,W:2)
CIRCLE 320,200,150
FOR n%=1 TO 60
  IF n%=60 OR n%=15 OR n%=30 OR n%=45
    t%=139
  ELSE
    t%=145
  ENDIF
  LINE 320-145*COS(n%/30*PI),200+145*SIN(n%/30*PI),320-t%*COS(n%/30*PI),200+t%*SIN(n%/30*PI)
NEXT n%
GET 70,50,470,350,horloge$
DEFLINE 1,2,0,1
DO
  PUT 70,50,horloge$
  PRINT AT(37,11);CHR$(27);"p";TIME$;CHR$(27);"q"
  DRAW 320-135*COS((VAL(RIGHT$(TIME$,2))+15)/30*PI),200-135*SIN((VAL(RIGHT$(TIME$,2))+15)/30*PI) TO 320,200 TO 320-80*COS((VAL(LEFT$(TIME$,2))+15)/6*PI),200-80*SIN((VAL(LEFT$(TIME$,2))+15)/6*PI)
  LINE 320,200,320-120*COS((VAL(RIGHT$(LEFT$(TIME$,5),2))+15)/30*PI),200-120*SIN((VAL(RIGHT$(LEFT$(TIME$,5),2))+15)/30*PI)
  BMOVE XBIOS(3),XBIOS(2),32000
LOOP
