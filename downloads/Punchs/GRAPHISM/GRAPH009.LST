' Auteur: Hugues-Olivier Yar
' ST Magazine nø28.
' GfA 3, basse r‚solution.
'
SETCOLOR 0,0,0,0
DIM x(50),y(50),xp(50),yp(50)
FOR i=1 TO 50
  xp(i)=INT(RND*20)-10
  yp(i)=INT(RND*20)-10
  x(i)=160
  y(i)=100
NEXT i
DO
  FOR i=1 TO 50
    PSET x(i),y(i),0
    ADD x(i),xp(i)
    ADD y(i),yp(i)
    IF x(i)<0 OR x(i)>640 OR y(i)<0 OR y(i)>400
      x(i)=160
      y(i)=100
    ENDIF
    PSET x(i),y(i),1
  NEXT i
LOOP
