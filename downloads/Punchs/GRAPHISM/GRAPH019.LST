FOR c%=2 TO 16
  COLOR c%
  FOR b%=0 TO 100 STEP 10
    FOR a%=-b% TO b% STEP 10
      DRAW 160,100-b%+ABS(a%) TO 160+a%,100 TO 160,100+b%-ABS(a%)
