Dim Big$(20)
For T%=1 To 20
  Print Mid$("SCROLLING, TRES LENT!",T%,1);Spc(10);"VEUILLEZ PATIENTER"
  For Y%=0 To 13          ! Monochrome: 13
    For X%=0 To 8
      If Point(X%,Y%)<>0
        Pcircle X%*10+5,Y%*10+5,5
      Endif
    Next X%
  Next Y%
  Get 9,0,71,80,Big$(T%)  ! A modifier aussi pour le monochrome
  Cls
Next T%
For T%=1 To 20
  Put 240,50,Big$(T%)
  Get 0,50,319,130,A$
  For R%=0 Downto -70
    Put R%,50,A$
  Next R%
Next T%
