' Auteur: FM STEREO. ST Magazine nø29.
' Animation de cube en 3D.
' GfA Basic 2 & 3. Toutes r‚solutions.
'
DO
  CLS
  x=COS(t)*25 ! Vous pouvez changer
  y=SIN(t)*25 ! les valeurs: le trajet
  r=SIN(t*2)*10 ! en sera modifi‚...
  LINE x+200,y+80-r,-y+200,x+80-r
  LINE -y+200,x+80-r,-x+200,-y+80-r
  LINE -x+200,-y+80-r,y+200,-x+80-r
  LINE y+200,-x+80-r,x+200,y+80-r
  LINE x+200,y+110+r,-y+200,x+110+r
  LINE -y+200,x+110+r,-x+200,-y+110+r
  LINE -x+200,-y+110+r,y+200,-x+110+r
  LINE y+200,-x+110+r,x+200,y+110+r
  LINE x+200,y+80-r,x+200,y+110+r
  LINE -y+200,x+80-r,-y+200,x+110+r
  LINE -x+200,-y+80-r,-x+200,-y+110+r
  LINE y+200,-x+80-r,y+200,-x+110+r
  t=t+0.1
LOOP
