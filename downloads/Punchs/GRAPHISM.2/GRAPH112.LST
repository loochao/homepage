PROCEDURE echiquier(tempo%,lr%)
  LOCAL a$,i%,j%,k%
  a$=SPACE$(32000)
  BLOAD "A:TAHITI01.PI1",V:a$-34
  ~XBIOS(6,L:V:a$-32)
  FOR k%=0 TO lr% STEP lr%
